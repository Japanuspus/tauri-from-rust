{
    "build": {
      "distDir": "dist",
      "withGlobalTauri": true
    },
    "tauri": {
      "bundle": {
        "identifier": "halwe.tauri_from_rust",
        "icon": [
          "icons/icon.png",
          "icons/icon.ico"
        ]
      },
      "allowlist": {
        "all": false
      },
      "systemTray": {
        "iconPath": "icons/icon.png",
        "iconAsTemplate": true
      },
      "windows": [
        {
          "width": 800,
          "height": 600,
          "resizable": true,
          "fullscreen": false
        }
      ]
    }
  }